<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/select_trusted_contact2__activity_bar2_color"
    tools:context="com.sharekeg.streetpal.Settings.ChangePasswordActivity">

    <RelativeLayout
        android:id="@+id/TV_passward"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/login_button_bg">

        <com.sharekeg.streetpal.TextViewForEnglish
            android:id="@+id/cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="10dp"
            android:text="@string/cancel"
            android:textColor="@color/white" />

        <com.sharekeg.streetpal.TextViewForEnglish
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/login_button_bg"
            android:text="@string/done"
            android:id="@+id/btndone"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="22dp" />

        <com.sharekeg.streetpal.TextViewForEnglish
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/password1"
            android:textColor="@color/white"
            android:id="@+id/textView7" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/old_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_passward"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">
        <com.sharekeg.streetpal.EditTextForEnglish
            android:id="@+id/oldpassword"
            android:layout_width="fill_parent"
            android:layout_marginTop="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/ic_password_setting"
            android:hint="@string/current_password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/login_controls_hint"
            android:textSize="13dp"
            android:drawableLeft="@drawable/ic_password"
            android:paddingLeft="10dp" />
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/select_trusted_contact2__activity_bar2_color"
    android:layout_alignParentTop="true"
    android:layout_marginTop="130dp"
    android:layout_below="@+id/old_password"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">
        <com.sharekeg.streetpal.EditTextForEnglish
            android:id="@+id/newpassword"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/old_password"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/ic_password_setting"
            android:hint="@string/new_password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/login_controls_hint"
            android:textSize="13dp"
            android:drawableLeft="@drawable/ic_password"
            android:paddingLeft="10dp" />

        <com.sharekeg.streetpal.EditTextForEnglish
            android:id="@+id/confirmpassword"
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/newpassword"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:drawablePadding="9dp"
            android:drawableStart="@drawable/ic_password_setting"
            android:hint="@string/confirm_new_password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_marginTop="1dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/login_controls_hint"
            android:textSize="13dp"
            android:drawableLeft="@drawable/ic_password"
            android:paddingLeft="10dp" />


</RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
