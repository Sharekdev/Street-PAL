<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharekeg.streetpal.Settings.LanguageActivity">
    <RelativeLayout
        android:id="@+id/TV_language"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/login_button_bg"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/cancel_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/back_icon"
            android:textColor="@color/white" />



        <com.sharekeg.streetpal.TextViewForEnglish
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/language"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="516dp"
        android:layout_below="@+id/TV_language"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:layout_marginTop="35dp"
    >
    <com.sharekeg.streetpal.TextViewForEnglish
        android:id="@+id/english"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@color/white"
        android:layout_alignTop="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="8dp"
        android:text="@string/english"

        />
    <com.sharekeg.streetpal.TextViewForEnglish
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/english"
        android:text="@string/united_kingdom"
        android:textColor="@color/login_controls_hint"
        android:layout_marginLeft="5dp"

        android:textSize="13dp"/>
    <ImageView
        android:id="@+id/english1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:layout_marginTop="80dp"
    >
    <com.sharekeg.streetpal.TextViewForEnglish
        android:id="@+id/arabic"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:background="@color/white"
        android:layout_alignTop="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_toRightOf="@+id/image"
        android:layout_marginLeft="8dp"
        android:text="@string/arabic"

        />
    <com.sharekeg.streetpal.TextViewForEnglish
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arabic"
        android:text="@string/egypt"
        android:textColor="@color/login_controls_hint"
        android:layout_marginLeft="5dp"
        android:textSize="13dp"/>

    <ImageView
        android:id="@+id/arabic1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />
</RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
