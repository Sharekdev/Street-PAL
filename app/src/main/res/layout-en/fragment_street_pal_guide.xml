<?xml version="1.0" encoding="utf-8"?>

<!--Fragment  layout for the street pal guide bot-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/chatList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/rlChoices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:orientation="vertical">


        <com.sharekeg.streetpal.TextViewForEnglish
            android:id="@+id/user_first_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/replyshape"
            android:padding="10dp"
            android:text="@string/user_guide_postive_button"
            android:textAlignment="center"
            android:textSize="13sp" />

        <com.sharekeg.streetpal.TextViewForEnglish
            android:id="@+id/user_second_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/replyshape"
            android:padding="10dp"
            android:text="@string/user_guide_negative_button"
            android:textAlignment="center"
            android:textSize="13sp" />

        <com.sharekeg.streetpal.TextViewForEnglish
            android:id="@+id/user_third_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/replyshape"
            android:padding="10dp"
            android:text="@string/user_guide_neutral_button"
            android:textAlignment="center"
            android:textSize="13sp" />


    </LinearLayout>


</FrameLayout>