<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_trusted_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sharekeg.streetpal.Registration.SelectTrustedContactsActivity2">

    <RelativeLayout
        android:id="@+id/UpperBarlayoutId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/select_trusted_contact__activity_bar_color">

        <com.sharekeg.streetpal.TextViewForArabic
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="@string/trusted_contact"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:id="@+id/textView4" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/cancel"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="@string/cancel"
            android:textColor="@color/white" />


        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/tvDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignBaseline="@+id/cancel"
            android:layout_alignBottom="@+id/cancel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="22dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scndbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UpperBarlayoutId"
        android:background="@color/select_trusted_contact2__activity_bar2_color">

        <com.sharekeg.streetpal.TextViewForArabic
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/Your_selected_contact"
            android:textColor="@color/black"
            android:textSize="14dp" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scndbar"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/scimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_user_contact_btn" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="17dp" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Number"
            android:textColor="@color/black"
            android:textSize="13dp" />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/IV_add_new"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/IV_edit"
            android:layout_alignRight="@+id/IV_edit"
            android:layout_marginLeft="100dp"
            android:src="@drawable/ic_add_new" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add-new"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/IV_add_new"
            android:layout_alignStart="@+id/IV_add_new"
            android:layout_alignLeft="@+id/IV_add_new"
            android:layout_marginRight="7dp"/>
        <ImageView
            android:id="@+id/IV_edit"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_edit"
            android:layout_centerHorizontal="true"

            />

        <com.sharekeg.streetpal.TextViewForArabic
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IV_edit"
            android:layout_marginRight="130dp"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:text="@string/edit"
            android:id="@+id/textView5" />
 <ImageView
            android:id="@+id/IV_remove"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/ic_remove"
            android:layout_alignStart="@+id/IV_edit"
            android:layout_alignLeft="@+id/IV_edit"
            android:layout_marginRight="100dp"

            />

        <com.sharekeg.streetpal.TextViewForArabic
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/IV_edit"
            android:layout_marginRight="110dp"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/IV_edit"
            android:layout_alignLeft="@+id/IV_edit"
            android:text="@string/remove" />

    </RelativeLayout>

</RelativeLayout>
