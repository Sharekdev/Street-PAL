<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--Card view for the street pal guide-->


    <RelativeLayout
        android:id="@+id/user_send_message_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/user_send_message_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/replyshape"
            android:gravity="center"
            android:padding="6dp"
            android:text="@string/user_guide_neutral_button"
            android:textAlignment="center"
            android:textSize="10sp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>