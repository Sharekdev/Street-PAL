<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_trusted_contacts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sharekeg.streetpal.Registration.SelectTrustedContactsActivity">

    <RelativeLayout
        android:id="@+id/UpperBarlayoutId"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/home_activity_bar_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:text="@string/add_trusted_contact"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:text="@string/skip"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginRight="13dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/strustedbg"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_below="@+id/UpperBarlayoutId"
        android:layout_centerInParent="true"
        android:background="@drawable/selectcontactbg">

        <ImageView
            android:id="@+id/ic_contact_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_contact_icon" />

        <TextView
            android:id="@+id/tvstcp1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ic_contact_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="@string/select_your_trusted_contact"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvstcp1"
            android:layout_centerHorizontal="true"
            android:text="@string/select_your_trusted_contact_part2"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/strustedbg"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btnSelectTrustedContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/strustedbg"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_choose_contact" />


</RelativeLayout>
